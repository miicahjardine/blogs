{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "POC": {
            "type": "string",
            "maxLength": 4,
            "metadata": {
              "description": "The name of the project or Proof of Concept"
            }
          },
          "location": {
            "type": "string",
            "allowedValues": [
              "UKWest",
              "UKSouth"
            ],
            "metadata": {
              "description": "Location that the resources will be deployed to"
            }
          },
          "environment": {
            "type": "string",
            "allowedValues": [
              "Prod",
              "DEV",
              "TST",
              "DT"
            ],
            "metadata": {
              "description": "Environment name"
            }
          },
          "owner": {
            "type": "string",
            "metadata": {
              "description": "The owner / developer of the resource"
            }
          },
          "vaultName": {
             "type": "string",
             "metadata": {
                  "description": "The name of the keyvault object"
              }
          },
          "dataplaneObjectId": {
             "type": "string",
             "metadata": {
                  "description": "This Azure AD Object ID of either application or user will have full dataplane accesss to the keyvault"
              }
          },
          "dataplaneTenantId": {
             "type": "string",
             "metadata": {
                  "description": "The tenant ID for the dataplane object"
              }
          },
          "secret1name": {
             "type": "string",
             "metadata": {
                  "description": "the name of the first secret to store"
              }
          },
          "secret1value": {
             "type": "securestring",
             "metadata": {
                  "description": "the value of the secret to be store, as a secure string"
              }
          }
    },
    "variables": {
        "locationShort": "[substring(parameters('location'),0,3)]",
        "vaultName": "[tolower(concat(parameters('POC'), '-KV-', parameters('vaultName'), '-', parameters('environment'), '-', variables('locationShort')))]"
    },
    "resources": [
        {
           "type": "Microsoft.KeyVault/vaults",
           "apiVersion": "2016-10-01",
           "name": "[variables('vaultName')]",
           "location": "[resourceGroup().location]",
           "tags": {
            "Subscription": "[Subscription().displayName]",
            "POC": "[parameters('POC')]",
            "RG": "[resourceGroup().name]",
            "Environment": "[parameters('environment')]",
            "Owner": "[parameters('owner')]"
        },
           "properties": {
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": true,
                "enabledForDiskEncryption": true,
                "tenantId": "[subscription().tenantID]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('dataplaneTenantId')]",
                        "objectId": "[parameters('dataplaneObjectId')]",
                        "permissions": {
                           "keys": ["All"],
                           "secrets": ["All"],
                           "certificates": ["All"],
                           "storage": ["All"]
                       }
                    },
                    {
                        "tenantId": "[parameters('dataplaneTenantId')]",
                        "objectId": "99ac3c4f-3931-42d5-bcc5-e67eaf8dff32",
                        "permissions": {
                           "keys": ["All"],
                           "secrets": ["All"],
                           "certificates": ["All"],
                           "storage": ["All"]
                       }
                    },
                    {
                        "tenantId": "[parameters('dataplaneTenantId')]",
                        "objectId": "b4e3e0ec-84fb-4409-a12c-4f65d0d478c6",
                        "permissions": {
                           "keys": ["All"],
                           "secrets": ["All"],
                           "certificates": ["All"],
                           "storage": ["All"]
                       }
                    }
                ],
                "sku": {
                    "name": "standard",
                    "family": "A"
                }
            },
            "resources": []
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2015-06-01",
            "name": "[concat(variables('vaultName'),'/', parameters('secret1name'))]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', variables('vaultName'))]"
            ],
            "properties": {
                "value": "[parameters('secret1value')]"
            }
        }
    ],
    "outputs": {}
}