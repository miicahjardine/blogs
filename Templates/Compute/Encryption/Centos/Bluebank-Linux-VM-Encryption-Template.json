{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "POC": {
            "type": "string",
            "maxLength": 4,
            "metadata": {
                "description": "The name of the POC or Proof of Concept"
            }
        },
        "locationShort": {
           "type": "string",
           "allowedValues": [
               "UKW",
               "UKS",
               "WEU",
               "NEU"
           ],
           "metadata": {
                "description": "The location of the resources, use the same location as the keyvault.  UKW,UKS,WEU,NEU"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
                "Prod",
                "DEV",
                "TST",
                "PPE",
                "DT"
            ],
            "metadata": {
                "description": "Environment name"
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "The name for the virtual machine"
            }
        },
        "aadClientID": {
            "type": "string",
            "defaultValue": "f383c074-7af3-41c6-8c99-c7e2269c5186",
            "allowedValues": [
                "f383c074-7af3-41c6-8c99-c7e2269c5186"
            ],
            "metadata": {
                "description": "Client ID of AAD app which has permissions to KeyVault"
            }
        },
        "aadClientSecret": {
            "type": "securestring",
            "defaultValue": "/dOIxIW1a3srIRRXFIYsp+p65pNp+qlu1/3dqXtCfIs=",
            "allowedValues": [
                "/dOIxIW1a3srIRRXFIYsp+p65pNp+qlu1/3dqXtCfIs="
            ],
            "metadata": {
                "description": "Client Secret of AAD app which has permissions to KeyVault"
            }
        },
        "keyVaultName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Name of the KeyVault to place the volume encryption key"
            }
        },
        "volumeType": {
            "type": "string",
            "defaultValue": "All",
            "allowedValues": [
                "All",
                "OS",
                "Data"
            ],
            "metadata": {
                "description": "Type of the volume OS or Data to perform encryption operation"
            }
        },
        "sequenceVersion": {
            "type": "string",
            "defaultValue": "1.0",
            "metadata": {
                "description": "Pass in an unique value like a GUID everytime the operation needs to be force run"
            }
        }
    },
    "variables": {
        "vmName": "[concat(parameters('POC'), '-VM-', parameters('vmName'),'-', parameters('environment'), '-', parameters('locationShort'))]",
        "vaultName": "[tolower(concat(parameters('POC'), '-KV-', parameters('keyVaultName'), '-', parameters('environment'), '-', parameters('locationShort')))]",
        "keyVaultResourceGroup": "[resourceGroup().name]",
        "extensionName": "AzureDiskEncryption",
        "extensionVersion": "0.1",
        "encryptionOperation": "EnableEncryption",
        "keyEncryptionAlgorithm": "RSA-OAEP",
        "keyVaultURL": "[concat('https://', variables('vaultName'), '.vault.azure.net/')]",
        "keyVaultResourceID": "[concat(subscription().id,'/resourceGroups/',variables('keyVaultResourceGroup'),'/providers/Microsoft.KeyVault/vaults/', variables('vaultName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmName'),'/', variables('extensionName'))]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
              "protectedSettings": {
                "AADClientSecret": "[parameters('aadClientSecret')]"
              },
              "publisher": "Microsoft.Azure.Security",
              "settings": {
                "AADClientID": "[parameters('aadClientID')]",
                "KeyEncryptionAlgorithm": "[variables('keyEncryptionAlgorithm')]",
                "KeyEncryptionKeyURL": null,
                "KeyVaultURL": "[variables('keyVaultURL')]",
                "SequenceVersion": "[parameters('sequenceVersion')]",
                "VolumeType": "[parameters('volumeType')]",
                "EncryptionOperation": "[variables('encryptionOperation')]"
              },
              "type": "AzureDiskEncryptionForLinux",
              "typeHandlerVersion": "[variables('extensionVersion')]"
            }
          },
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "storageProfile": {
                    "osDisk": {
                        "encryptionSettings": {
                            "diskEncryptionKey": {
                                "sourceVault": {
                                    "id": "[variables('keyVaultResourceID')]"
                                },
                                "secretUrl": "[reference(resourceId('Microsoft.Compute/virtualMachines/extensions',  variables('vmName'), variables('extensionName'))).instanceView.statuses[0].message]"
                            }
                        }
                    }
                }
            }
        }
    ],
    "outputs": {}
}