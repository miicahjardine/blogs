{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "POC": {
            "type": "string",
            "maxLength": 4,
            "metadata": {
              "description": "The name of the project or Proof of Concept"
            }
          },
          "locationShort": {
             "type": "string",
             "allowedValues": [
                 "UKW",
                 "UKS",
                 "WEU",
                 "NEU"
             ],
             "metadata": {
                  "description": "The short code for the location of the keyvault"
              }
          },
          "environment": {
            "type": "string",
            "allowedValues": [
              "Prod",
              "DEV",
              "TST",
              "DT"
            ],
            "metadata": {
              "description": "Environment name"
            }
          },
          "owner": {
            "type": "string",
            "metadata": {
              "description": "The owner / developer of the resource"
            }
          },
          "vaultName": {
             "type": "string",
             "metadata": {
                  "description": "The name of the keyvault object"
              }
          },
          "dataplaneObjectId": {
             "type": "string",
             "defaultValue": "0588ff00-1814-4b82-85ca-ff59a2fcfe4d",
             "allowedValues": [
                 "0588ff00-1814-4b82-85ca-ff59a2fcfe4d"
             ],
             "metadata": {
                  "description": "This Azure AD Object ID of either application or user will have full dataplane accesss to the keyvault, use the default."
              }
          },
          "dataplaneTenantId": {
             "type": "string",
             "defaultValue": "7c7175e2-48cc-4ef6-938d-e3dd722ec114",
             "allowedValues": [
                 "7c7175e2-48cc-4ef6-938d-e3dd722ec114"
             ],
             "metadata": {
                  "description": "The tenant ID for the dataplane object"
              }
          }
    },
    "variables": {
        "vaultName": "[tolower(concat(parameters('POC'), '-KV-', variables('vaultName'), '-', parameters('environment'), '-', parameters('locationShort')))]"
    },
    "resources": [
        {
           "type": "Microsoft.KeyVault/vaults",
           "apiVersion": "2016-10-01",
           "name": "[variables('vaultName')]",
           "location": "[resourceGroup().location]",
           "tags": {
            "Subscription": "[Subscription().displayName]",
            "POC": "[parameters('POC')]",
            "RG": "[resourceGroup().name]",
            "Environment": "[parameters('environment')]",
            "Owner": "[parameters('owner')]"
        },
           "properties": {
                "enabledForDeployment": true,
                "enabledForTemplateDeployment": true,
                "enabledForDiskEncryption": true,
                "tenantId": "[subscription().tenantID]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('dataplaneTenantId')]",
                        "objectId": "[parameters('dataplaneObjectId')]",
                        "permissions": {
                           "keys": ["All"],
                           "secrets": ["All"],
                           "certificates": ["All"],
                           "storage": ["All"]
                       }
                    }
                ],
                "sku": {
                    "name": "standard",
                    "family": "A"
                }
            },
            "resources": []
        }
    ],
    "outputs": {}
}