{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "POC": {
            "type": "string",
            "maxLength": 4,
            "metadata": {
              "description": "The name of the project or Proof of Concept"
            }
          },
          "location": {
            "type": "string",
            "allowedValues": [
              "UKWest",
              "UKSouth"
            ],
            "metadata": {
              "description": "Location that the resources will be deployed to"
            }
          },
          "environment": {
            "type": "string",
            "allowedValues": [
              "Prod",
              "DEV",
              "TST",
              "DT"
            ],
            "metadata": {
              "description": "Environment name"
            }
          },
          "owner": {
            "type": "string",
            "metadata": {
              "description": "The owner / developer of the resource"
            }
          },
        "dataStorageName": {
            "type": "string",
            "defaultValue": "diag",
            "allowedValues": [
              "diag"
            ],
            "maxLength": 9,
            "metadata": {
                "description": "Name of the storage account used for the Data staging and output of ADF"
            }
        },
        "storageType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
              "Standard_LRS",
              "Standard_ZRS",
              "Standard_GRS"
            ]
          }
    },
    "variables": {
        "dataStorageName": "[tolower(concat(parameters('POC'), parameters('dataStorageName'), parameters('environment'),uniqueString(subscription().id)))]"
    },
    "resources": [
        {
            "name": "[variables('dataStorageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[parameters('location')]",
            "apiVersion": "2016-01-01",
            "tags": {
              "displayName": "dataStorage",
              "POC": "[parameters('POC')]",
              "RG": "[resourceGroup().name]",
              "Environment": "[parameters('environment')]",
              "Owner": "[parameters('owner')]"
            },
            "sku": {
              "name": "[parameters('storageType')]"
            },
            "kind": "Storage"
          }
    ],
    "outputs": {}
}